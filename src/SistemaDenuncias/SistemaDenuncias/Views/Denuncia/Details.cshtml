@model SistemaDenuncias.Models.Denuncia

@{
    ViewData["Title"] = "Detalhes da Denúncia";
}

<h2 class="mb-4 text-center">Detalhes da Denúncia</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Protocolo:</dt>
            <dd class="col-sm-9">@Model.Protocolo</dd>

            <dt class="col-sm-3">Tipo:</dt>
            <dd class="col-sm-9">@Model.TipoDenuncia</dd>

            <dt class="col-sm-3">Descrição:</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Data de Criação:</dt>
            <dd class="col-sm-9">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                @switch (Model.Status)
                {
                    case SistemaDenuncias.Models.StatusDenuncia.Aberta:
                        <span class="badge bg-warning text-dark">Aberta</span>
                        break;
                    case SistemaDenuncias.Models.StatusDenuncia.Analise:
                        <span class="badge bg-info text-dark">Em Análise</span>
                        break;
                    case SistemaDenuncias.Models.StatusDenuncia.Fechada:
                        <span class="badge bg-success">Fechada</span>
                        break;
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    @if (Model.Status != SistemaDenuncias.Models.StatusDenuncia.Fechada)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    }
</div>
