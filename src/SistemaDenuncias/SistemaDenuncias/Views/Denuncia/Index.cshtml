@model IEnumerable<SistemaDenuncias.Models.Denuncia>

@{
    ViewData["Title"] = "Minhas Denúncias";
}

<h2 class="mb-4 text-center">Minhas Denúncias</h2>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Nova Denúncia</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Protocolo</th>
            <th>Tipo</th>
            <th>Data</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Protocolo</td>
                <td>@item.TipoDenuncia</td>
                <td>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @switch (item.Status)
                    {
                        case SistemaDenuncias.Models.StatusDenuncia.Aberta:
                            <span class="badge bg-warning text-dark">Aberta</span>
                            break;
                        case SistemaDenuncias.Models.StatusDenuncia.Analise:
                            <span class="badge bg-info text-dark">Em Análise</span>
                            break;
                        case SistemaDenuncias.Models.StatusDenuncia.Fechada:
                            <span class="badge bg-success">Fechada</span>
                            break;
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                    @if (item.Status != SistemaDenuncias.Models.StatusDenuncia.Fechada)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Você ainda não possui denúncias registradas.</div>
}
