@model SistemaDenuncias.Models.Denuncia

@{
    ViewData["Title"] = "Excluir Denúncia: " + Model.Protocolo;
}

<h1>Excluir Denúncia</h1>

<h3 class="text-danger">Tem certeza que deseja excluir esta denúncia? Esta ação não pode ser desfeita.</h3>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h5>Confirmação de Exclusão - Protocolo: @Html.DisplayFor(model => model.Protocolo)</h5>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.TipoDenuncia)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TipoDenuncia)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                <span class="badge
                      @(Model.Status == SistemaDenuncias.Models.StatusDenuncia.Aberta ? "bg-success" : "bg-warning text-dark")">
                    @Html.DisplayFor(model => model.Status)
                </span>
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DataCriacao)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DataCriacao)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt class="col-sm-3">
                Localização
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Rua), @Html.DisplayFor(model => model.Numero) -
                @Html.DisplayFor(model => model.Cidade)/@Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>