@model SistemaDenuncias.Models.Denuncia
@{
    ViewData["Title"] = "Confirmar Exclusão";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<div class="user-content-wrapper">
    <div class="delete-view">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Exclusão</h1>
        <h3>Você tem certeza que deseja excluir esta denúncia?</h3>
        <p class="text-muted">Esta ação não pode ser desfeita.</p>

        <div class="details-view mt-4">
            <div class="details-row"><div class="details-label">Protocolo:</div><div class="details-value fw-bold">@Model.Protocolo</div></div>
            <div class="details-row"><div class="details-label">Tipo:</div><div class="details-value">@Model.TipoDenuncia</div></div>
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <a asp-action="Index" class="btn-form btn-form-secondary">Cancelar</a>
                <button type="submit" class="btn-form btn-danger">Confirmar Exclusão</button>
            </div>
        </form>
    </div>
</div>