@model SistemaDenuncias.Models.Denuncia
@{
    ViewData["Title"] = "Editar Denúncia";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<div class="user-content-wrapper">
    <div class="form-container">
        <h1><i class="bi bi-pencil-square"></i> Editar Denúncia</h1>
        <p class="text-center text-muted mb-4">Atualize as informações da sua denúncia. Protocolo: <strong>@Model.Protocolo</strong></p>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group grid-full-width"><label asp-for="TipoDenuncia">Tipo de Denúncia</label><input asp-for="TipoDenuncia" class="form-control-custom" /></div>
            <div class="form-group grid-full-width"><label asp-for="Descricao">Descrição do Fato</label><textarea asp-for="Descricao" class="form-control-custom"></textarea></div>

            <h5 class="mt-4 grid-full-width">Localização do Fato</h5><hr class="grid-full-width" />

            <div class="form-grid">
                <div class="form-group"><label asp-for="Estado">Estado</label><input asp-for="Estado" class="form-control-custom" /></div>
                <div class="form-group"><label asp-for="Cidade">Cidade</label><input asp-for="Cidade" class="form-control-custom" /></div>
                <div class="form-group grid-full-width"><label asp-for="Rua">Rua</label><input asp-for="Rua" class="form-control-custom" /></div>
                <div class="form-group"><label asp-for="Numero">Número</label><input asp-for="Numero" class="form-control-custom" /></div>
                <div class="form-group"><label asp-for="Cep">CEP</label><input asp-for="Cep" class="form-control-custom" /></div>
                <div class="form-group"><label asp-for="Bairro">Bairro</label><input asp-for="Bairro" class="form-control-custom" /></div>
                <div class="form-group"><label asp-for="Complemento">Complemento</label><input asp-for="Complemento" class="form-control-custom" /></div>
            </div>

            <hr class="grid-full-width" />
            <div class="form-group grid-full-width" style="display: flex; align-items: center; gap: 10px;"><input asp-for="DenunciaAnonima" type="checkbox" /><label asp-for="DenunciaAnonima" style="margin:0;">Manter esta denúncia como anônima.</label></div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-form btn-form-secondary">Cancelar</a>
                <button type="submit" class="btn-form btn-form-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>