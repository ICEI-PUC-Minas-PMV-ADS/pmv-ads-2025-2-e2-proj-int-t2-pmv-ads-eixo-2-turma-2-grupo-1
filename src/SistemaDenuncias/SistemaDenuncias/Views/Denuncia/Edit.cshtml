@model SistemaDenuncias.Models.Denuncia

@{
    ViewData["Title"] = "Editar Denúncia: " + Model.Protocolo;
}

<h1>@ViewData["Title"]</h1>

<h4>Atualize os dados da sua denúncia</h4>
<hr />

@* Exibir mensagem de erro ou sucesso se houver *@
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Erro"]
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo oculto para garantir que o Id seja enviado na submissão -->
            <input type="hidden" asp-for="Id" />

            @* Campos ocultos para manter Protocolo, DataCriacao e Status no caso de model binding falhar, 
               mas o Controller já está tratando isso ao buscar a versão original. Mantemos apenas o Id. *@

            <div class="form-group">
                <label asp-for="TipoDenuncia" class="control-label"></label>
                <input asp-for="TipoDenuncia" class="form-control" />
                <span asp-validation-for="TipoDenuncia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Seção de Endereço -->
            <fieldset class="border p-3 my-3">
                <legend class="w-auto px-2">Local do Fato</legend>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" maxlength="2" placeholder="Ex: MG" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Rua" class="control-label"></label>
                        <input asp-for="Rua" class="form-control" />
                        <span asp-validation-for="Rua" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Cep" class="control-label"></label>
                        <input asp-for="Cep" class="form-control" maxlength="9" placeholder="00000-000" />
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Complemento" class="control-label"></label>
                        <input asp-for="Complemento" class="form-control" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DenunciaAnonima" /> @Html.DisplayNameFor(model => model.DenunciaAnonima)
                </label>
                <p class="text-muted"><small>Marque se você deseja que esta denúncia seja tratada anonimamente.</small></p>
            </div>

            <hr />

            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}