@model SistemaDenuncias.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Realize seu Cadastro - ProtecSys</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/usuario-style.css" asp-append-version="true" />
</head>
<body class="user-scope">

    <div class="form-page-container">
        <div class="form-box">
            <h1>REALIZE SEU CADASTRO</h1>
            <form asp-action="Cadastro" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Nome">NOME:</label>
                    <input asp-for="Nome" class="form-control-custom" placeholder="Ex: Ana Clara Soares" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">E-MAIL:</label>
                    <input asp-for="Email" class="form-control-custom" placeholder="Ex: seuEmail@gmail.com" />
                </div>
                <div class="form-group">
                    <label asp-for="Cpf">CPF:</label>
                    <input asp-for="Cpf" class="form-control-custom" placeholder="Ex: 111.111.111-11" />
                </div>
                <div class="form-group">
                    <label asp-for="Telefone">TELEFONE:</label>
                    <input asp-for="Telefone" class="form-control-custom" placeholder="Ex: (11) 99999-9999" />
                </div>
                <div class="form-group">
                    <label asp-for="Senha">SENHA:</label>
                    <input asp-for="Senha" type="password" class="form-control-custom" placeholder="Ex: Ana@2025" />
                </div>

                <button type="submit" class="btn-custom-primary">Cadastrar</button>
                <a asp-action="Login" class="btn-custom-secondary">Já possuo conta</a>
            </form>
        </div>
    </div>

    <footer class="user-footer" style="position:fixed; bottom:0; width:100%;">
        &copy; @DateTime.Now.Year - ProtecSys – Sistema de Denúncias Corporativas.
    </footer>

</body>
</html>